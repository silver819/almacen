{% extends '::base.html.twig' %}

{% block content %}
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <div class="col-md-3 column adminBar">
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <h3>Menú superusuario</h3>
                <ul class="adminList">
                    <li><a href="#">Gestionar usuarios</a></li>
                </ul>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <h3>Menú propietario</h3>
                <ul class="adminList">
                    <li><a href="{{ path('ViewActivities') }}">Mis instalaciones</a></li>
                    <li><a href="">Mis reservas</a></li>
                </ul>
            {% endif %}   
            {% if is_granted('ROLE_USER') %}
                <h3>Menú usuario</h3>
                <ul class="adminList">
                    <li><a href="#">Fútbol</a></li>
                    <li><a href="#">Tenis</a></li>
                    <li><a href="#">Piscina</a></li>
                </ul>
           {% endif %}
        </div>
        <div class="col-md-9 column workZone">
            {% block workZone %}{% endblock %}
        </div>
    {% else %}
        <div class="col-md-6 column loginRegisterDiv">
            <div id="mainSearcher">
                <div id="tabs-container" class="block-tabs  widget-block-tabmain ">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#" data-toggle="tab">Buscar</a>
                        </li>
                    </ul>
                    <div class="menuContent">
                        Buscador
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 column loginRegisterDiv">
            <div id="loginRegisterDiv">
                <div id="tabs-container" class="block-tabs  widget-block-tabmain ">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#login" data-toggle="tab">Entrar</a>
                        </li>
                        <li>
                            <a href="#register" data-toggle="tab">Registrar</a>
                        </li>
                    </ul>
                    <div class="menuContent">
                        <div id="login">
                            <a class="loginLink" href="{{ path('fos_user_security_login') }}">
                                <div class="btn-group btn-group-lg">
                                    <button class="btn btn-default" type="button"> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}</button>
                                </div>
                            </a> 
                        </div>
                        <div id="register">
                            <a class="registerLink" href="{{ path('fos_user_registration_register') }}">
                                <div class="btn-group btn-group-lg">
                                    </button> <button class="btn btn-default" type="button"> {{ 'Registrar'|trans({}, 'FOSUserBundle') }}</button>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="col-md-12 column carruselContent">
                Carrusel con actividades
            </div>
        </div>
    {% endif %}
{% endblock %}