{% extends '::base.html.twig' %}

{% block header %}
	Nuevo usuario
{% endblock %}

{% block content %}
	{{ form_start(form) }}
		{{ form_errors(form.name) }}
		{{ form_errors(form.surname) }}
		{{ form_errors(form.email.first) }}
		{{ form_errors(form.email.second) }}
		{{ form_errors(form.password.first) }}
		{{ form_errors(form.password.second) }}
		<table>
			<tr>
				<td>{{ form_label(form.name) }}</td>
				<td>
					{{ form_widget(form.name) }}
				</td>
			</tr>
			<tr>
				<td>{{ form_label(form.surname) }}</td>
				<td>
					{{ form_widget(form.surname) }}
				</td>
			</tr>
			<tr>
				<td>{{ form_label(form.email.first) }}</td>
				<td>
					{{ form_widget(form.email.first, {'attr': {'class': 'errorInputForm'}}) }}
		    		
				</td>
			</tr>
			<tr>
				<td>{{ form_label(form.email.second) }}</td>
				<td>
					{{ form_widget(form.email.second) }}
		    		
				</td>
			</tr>
			<tr>
				<td>{{ form_label(form.password.first) }}</td>
				<td>
					{{ form_widget(form.password.first) }}
				</td>
			</tr>
			<tr>
				<td>{{ form_label(form.password.second) }}</td>
				<td>
					{{ form_widget(form.password.second) }}
				</td>
			</tr>
	    <table>
	{{ form_end(form) }}
{% endblock %}